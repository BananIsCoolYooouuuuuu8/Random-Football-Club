<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chooseTheLeague"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="70dp"
            android:text="Choose the league"
            android:textSize="30sp"
            android:visibility="visible" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/premierLeague"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/widthImageView"
                    android:layout_height="@dimen/heightImageView"
                    android:src="@drawable/premier_league_logo" />

                <TextView
                    android:layout_width="@dimen/widthTextView"
                    android:layout_height="@dimen/heightTextView"
                    android:gravity="center"
                    android:text="premier league" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/laliga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:layout_width="@dimen/widthImageView"
                    android:layout_height="@dimen/heightImageView"
                    android:src="@drawable/laliga_logo" />

                <TextView
                    android:layout_width="@dimen/widthTextView"
                    android:layout_height="@dimen/heightTextView"
                    android:gravity="center"
                    android:text="laliga" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/bundesliga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:layout_width="@dimen/widthImageView"
                    android:layout_height="@dimen/heightImageView"
                    android:src="@drawable/bundesliga_logo" />

                <TextView
                    android:layout_width="@dimen/widthTextView"
                    android:layout_height="@dimen/heightTextView"
                    android:gravity="center"
                    android:text="bundesliga" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ligue1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:layout_width="@dimen/widthImageView"
                    android:layout_height="@dimen/heightImageView"
                    android:src="@drawable/ligue1_logo" />

                <TextView
                    android:layout_width="@dimen/widthTextView"
                    android:layout_height="@dimen/heightTextView"
                    android:gravity="center"
                    android:text="ligue 1" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/seriaA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="@dimen/widthImageView"
                android:layout_height="@dimen/heightImageView"
                android:src="@drawable/seriaa_logo" />

            <TextView
                android:layout_width="@dimen/widthTextView"
                android:layout_height="@dimen/heightTextView"
                android:gravity="center"
                android:text="seria A" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/clubAndNameDisplay"
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/clubName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="80dp"
            android:text="club"
            android:textSize="40sp"
            />

        <ImageView
            android:id="@+id/clubImage"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_foreground"
            />

    </LinearLayout>

    <Button
        android:id="@+id/buttonRestart"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="40dp"
        android:text="Restart!"
        android:textSize="50sp"
        android:visibility="gone" />

</FrameLayout>